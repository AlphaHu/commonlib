<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.serenegiant.common.test" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="28" />

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:functionalTest="false"
        android:handleProfiling="false"
        android:label="Tests for com.serenegiant.common.test"
        android:targetPackage="com.serenegiant.common.test" />

    <application
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true" >
        <uses-library android:name="android.test.runner" />

        <provider
            android:name="androidx.lifecycle.ProcessLifecycleOwnerInitializer"
            android:authorities="com.serenegiant.common.test.lifecycle-process"
            android:exported="false"
            android:multiprocess="true" />
    </application>

</manifest>